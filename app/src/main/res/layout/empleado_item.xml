<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    >


    <ImageView
        android:id="@+id/empleado_imagen"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/empleado_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        tools:text="Emerson Alegria Sequeira"
        android:layout_toEndOf="@id/empleado_imagen" />

    <TextView
        android:id="@+id/empleado_puesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        tools:text="Desarrollador"
        android:layout_toEndOf="@id/empleado_imagen"
        android:layout_below="@id/empleado_nombre"/>

</RelativeLayout>